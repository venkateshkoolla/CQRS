{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Async", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentUserName", "WithDemystifiedStackTraces" ],
    "LevelSwitches": { "$controlSwitch": "Information" },
    "MinimumLevel": {
      "ControlledBy": "$controlSwitch",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "controlLevelSwitch": "$controlSwitch"
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "https://log.ocas.ca",
          "apiKey": "biMBiATd56Kje4U7ESpi",
          "compact": true
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "C:\\Logs\\applyadmin-api\\log.txt",
                "fileSizeLimitBytes": 10485760,
                "retainedFileCountLimit": 10,
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": true,
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
              }
            }
          ]
        }
      }
    ]
  },
  "ocas": {
    "environment": "prod",
    "applicationName": "applyadmin-api",
    "appSettingsBaseUrl": "https://appsettingsapi.ocas.ca",
    "appSettingsName": "domesticapply-api",
    "idsvr": {
      "authority": "https://identity.ocas.ca/core",
      "issuer": "https://identity.ocas.ca",
      "roles": {
        "ocas": [ "PortalAdmin", "BO", "CCC", "CustomerContactCentre" ],
        "partnerCollegeUser": [ "PartnerCollegeAdministrators", "PartnerCollegeUsers", "PartnerCollegeReadOnly" ],
        "partnerHSBoardUser": [ "PartnerBoardAdministrators", "PartnerBoardUsers", "PartnerBoardReadOnly" ],
        "partnerHighSchoolUser": [ "PartnerSchoolAdministrators", "PartnerSchoolUsers", "PartnerSchoolReadOnly" ]
      },
      "appSettings": {
        "clientId": "asapi.clientcredentials",
        "clientSecret": "REPLACED_ON_RELEASE",
        "scope": "as_api"
      }
    },
    "ids4": {
      "authority": "https://authenticate.ocas.ca/auth",
      "issuer": "https://authenticate.ocas.ca/auth"
    }
  }
}