{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Async", "Serilog.Sinks.File" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentUserName", "WithDemystifiedStackTraces" ],
    "LevelSwitches": { "$controlSwitch": "Debug" },
    "MinimumLevel": {
      "ControlledBy": "$controlSwitch",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": ".\\Logs\\test-log.txt",
                "fileSizeLimitBytes": 10485760,
                "retainedFileCountLimit": 10,
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": true,
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
              }
            }
          ]
        }
      }
    ]
  },
  "ocas": {
    "environment": "test",
    "applicationName": "applyadmin-api",
    "appSettingsBaseUrl": "https://appsettingsapi-ci.dev.ocas.ca",
    "appSettingsName": "domesticapply-api",
    "idsvr": {
      "authority": "https://identity-ci.dev.ocas.ca/core",
      "issuer": "https://identity-ci.dev.ocas.ca",
      "roles": {
        "ocas": [ "PortalAdmin", "BO", "CCC", "Dev_CustomerContactCentre" ],
        "partnerCollegeUser": [ "UAT_PartnerCollegeAdministrators", "UAT_PartnerCollegeUsers", "UAT_PartnerCollegeReadOnly" ],
        "partnerHSBoardUser": [ "UAT_PartnerBoardAdministrators", "UAT_PartnerBoardUsers", "UAT_PartnerBoardReadOnly" ],
        "partnerHighSchoolUser": [ "UAT_PartnerSchoolAdministrators", "UAT_PartnerSchoolUsers", "UAT_PartnerSchoolReadOnly" ]
      },
      "appSettings": {
        "clientId": "asapi.clientcredentials",
        "clientSecret": "secret1",
        "scope": "as_api"
      }
    },
    "ids4": {
      "authority": "https://authenticate-ci.dev.ocas.ca/auth",
      "issuer": "https://authenticate-ci.dev.ocas.ca/auth"
    }
  }
}
