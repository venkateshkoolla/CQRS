{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Async", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentUserName", "WithDemystifiedStackTraces" ],
    "LevelSwitches": { "$controlSwitch": "Information" },
    "MinimumLevel": {
      "ControlledBy": "$controlSwitch",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "controlLevelSwitch": "$controlSwitch"
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "https://log.uat.ocas.ca",
          "apiKey": "MTrzYEq2erkJQL8d7AXy",
          "compact": true
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "C:\\Logs\\domesticapply-api-uat\\log.txt",
                "fileSizeLimitBytes": 10485760,
                "retainedFileCountLimit": 10,
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": true,
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
              }
            }
          ]
        }
      }
    ]
  },
  "ocas": {
    "environment": "uat",
    "applicationName": "domesticapply-api",
    "appSettingsBaseUrl": "https://appsettingsapi.uat.ocas.ca",
    "idpvr": {
      "authority": "https://applicantlogin.uat.ontariocolleges.ca/identity",
      "issuer": "https://applicantlogin.uat.ontariocolleges.ca/identity"
    },
    "idsvr": {
      "authority": "https://identity.uat.ocas.ca/core",
      "issuer": "https://identity.uat.ocas.ca",
      "roles": {
        "ocas": [ "PortalAdmin", "BO", "CCC", "UAT_CustomerContactCentre" ]
      },
      "appSettings": {
        "clientId": "asapi.clientcredentials",
        "clientSecret": "REPLACED_ON_RELEASE",
        "scope": "as_api"
      }
    },
    "ids4": {
      "authority": "https://authenticate.uat.ocas.ca/auth",
      "issuer": "https://authenticate.uat.ocas.ca/auth"
    }
  }
}
