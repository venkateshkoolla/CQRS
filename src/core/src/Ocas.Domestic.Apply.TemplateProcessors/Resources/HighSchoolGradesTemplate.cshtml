<style>
    /* Template specific styles */

    body {
        font-size: 15px;
        margin: 50px;
        line-height: 22px;
    }

    table {
        border-collapse: collapse;
        margin-top: 16px;
        width: 100%;
    }

    th {
        text-align: left;
        border-top: 1px solid #c2cfd6;
        border-bottom: 1px solid #c2cfd6;
        height: 44px;
    }

    tbody > tr:nth-child(even) {
        background: #f0f3f5;
    }

    td {
        padding: 2px 4px;
    }

    .data-rows {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

        .data-rows > .data-row {
            display: flex;
            flex-direction: row;
            flex-flow: row wrap;
            margin-bottom: 4px;
            width: 100%;
        }

            .data-rows > .data-row > .label {
                display: block;
                width: 240px;
                font-weight: 300;
            }

    .app-page-divider {
        display: block;
        margin-top: 32px;
        padding-top: 24px;
        border-top: 1px solid #c2cfd6;
    }
</style>
<body>
    <h1>@Model.Labels.OntarioHighSchoolInformation</h1>

    <div class="app-page-divider"></div>

    <h2>@Model.Labels.AcademicData</h2>
    <div class="data-rows">
        <div class="data-row">
            <span class="label">@Model.Labels.Literacy</span>
            <span class="value">@Model.Literacy</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.CommunityInvolvement</span>
            <span class="value">@Model.CommunityInvolvement</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.HighestEducation</span>
            <span class="value">@Model.HighestEducation</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.DateCredentialAchieved</span>
            <span class="value">@Model.DateCredentialAchieved</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.SchoolsAttended</span>
            <span class="value">
                @foreach (var school in @Model.SchoolsAttended)
                {
                    @school <br />
                }
            </span>
        </div>
        @if (!string.IsNullOrWhiteSpace(Model.HighSkillsMajor))
        {
            <div class="data-row">
                <span class="label">@Model.Labels.HighSkillsMajor</span>
                <span class="value">@Model.HighSkillsMajor</span>
            </div>
        }
    </div>

    <div class="app-page-divider"></div>

    @if (Model.Grades.Count > 0)
    {
        <h2>@Model.Labels.OntarioHighSchoolGrades - @Model.Labels.TotalCreditsToDate @Model.TotalCredits</h2>

        <table>
            <thead>
                <tr>
                    <th>@Model.Labels.CourseCode</th>
                    <th>@Model.Labels.CompletedDate</th>
                    <th>@Model.Labels.Mark</th>
                    <th>@Model.Labels.MarkType</th>
                    <th>@Model.Labels.Credit</th>
                    <th>@Model.Labels.CourseStatus</th>
                    <th>@Model.Labels.DeliveryType</th>
                    <th>@Model.Labels.CourseType</th>
                    <th>@Model.Labels.Notes</th>
                    <th>@Model.Labels.MidentCode</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var grade in Model.Grades)
                {
                    <tr>
                        <td>@grade.CourseCode</td>
                        <td>@grade.CompletedDate</td>
                        <td>@grade.Mark</td>
                        <td>@grade.MarkType</td>
                        <td>@grade.Credit</td>
                        <td>@grade.CourseStatus</td>
                        <td>@grade.DeliveryType</td>
                        <td>@grade.CourseType</td>
                        <td>@grade.Notes</td>
                        <td>@grade.MidentCode</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>@Model.Labels.NoGrades</h2>
    }
</body>
</html>