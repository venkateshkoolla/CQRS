<style>
    /* Template specific styles */

    body {
        font-size: 15px;
        margin: 50px;
        line-height: 22px;
    }

    .table-header {
        font-size: 22px;
        margin-bottom: 4px;
        margin-top: 14px;
    }

    table {
        border-collapse: collapse;
        margin-top: 16px;
    }

    th {
        text-align: left;
        border-top: 1px solid #c2cfd6;
        border-bottom: 1px solid #c2cfd6;
    }

    tbody > tr:nth-child(even) {
        background: #f0f3f5;
    }

    td {
        padding: 2px 4px;
    }

    .data-rows {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin-top: 16px;
        margin-bottom: 16px;
    }

        .data-rows > .data-row {
            display: flex;
            flex-direction: row;
            flex-flow: row wrap;
            margin-bottom: 4px;
            width: 100%;
        }

            .data-rows > .data-row > .label {
                display: block;
                width: 240px;
                font-weight: 300;
            }

    .app-page-divider {
        display: block;
        margin-top: 32px;
        padding-top: 24px;
        border-top: 1px solid #c2cfd6;
    }
</style>
<body>
    <h1>@Model.Labels.OfficialTranscript</h1>

    <div class="app-page-divider"></div>

    <h2>@Model.Labels.TranscriptInformation</h2>
    <div class="data-rows">
        <div class="data-row">
            <span class="label">@Model.Labels.DateReceived</span>
            <span class="value">@Model.DateReceived</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.ApplicationNumber</span>
            <span class="value">@Model.ApplicationNumber</span>
        </div>
    </div>

    <div class="app-page-divider"></div>

    <h2>@Model.Labels.StudentInformation</h2>
    <div class="data-rows">
        <div class="data-row">
            <span class="label">@Model.Labels.FirstName</span>
            <span class="value">@Model.StudentFirstName</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.SecondNameAndInitial</span>
            <span class="value">@Model.StudentMiddleName</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.Surname</span>
            <span class="value">@Model.StudentLastName</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.FormerSurname</span>
            <span class="value">@Model.StudentFormerLastName</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.DateOfBirth</span>
            <span class="value">@Model.StudentDob</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.Gender</span>
            <span class="value">@Model.StudentGender</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.CollegeUniversityStudentID</span>
            <span class="value">@Model.StudentId</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.OEN</span>
            <span class="value">@Model.StudentOen</span>
        </div>
    </div>

    <div class="app-page-divider"></div>

    @* Academic Awards *@
    @if (Model.AcademicAwards.Count > 0)
    {
        <h2>@Model.Labels.AcademicAwardSectionHeader</h2>

        foreach (var academicAward in Model.AcademicAwards)
        {
            <div class="data-rows">
                @if (!string.IsNullOrWhiteSpace(academicAward.Title))
                {
                    <div class="data-row">
                        <span class="label">@Model.Labels.AcademicAwardTitle:</span>
                        <span class="value">@academicAward.Title</span>
                    </div>
                }

                <div class="data-row">
                    <span class="label">@Model.Labels.AcademicAwardDate:</span>
                    <span class="value">@academicAward.Date</span>
                </div>

                @if (!string.IsNullOrWhiteSpace(academicAward.ProgramName))
                {
                    <div class="data-row">
                        <span class="label">@Model.Labels.AcademicAwardProgram:</span>
                        <span class="value">@academicAward.ProgramName</span>
                    </div>
                }
            </div>
        }

        <div class="app-page-divider"></div>
    }

    <h2>@Model.Labels.ContactInformation</h2>
    <div class="data-rows">
        <div class="data-row">
            <span class="label">@Model.Labels.ContactName</span>
            <span class="value">@Model.ContactName</span>
        </div>
        <div class="data-row">
            <span class="label">@Model.Labels.ContactPhone</span>
            <span class="value">@Model.ContactPhone</span>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.NotesSpecialInstructions))
    {
        <div class="app-page-divider"></div>

        <h2>@Model.Labels.NotesSpecialInstructions</h2>
        <p>@Model.NotesSpecialInstructions</p>
    }

    @if (Model.Semesters.Count > 0)
    {
        foreach (var semester in Model.Semesters)
        {
            <div style="page-break-inside: avoid;">

                <div class="app-page-divider"></div>

                <h2>@Model.Labels.Semester @semester.Name</h2>

                <div class="data-rows">
                    <div class="data-row">
                        <span class="label">@Model.Labels.DateSemesterStarted</span>
                        <span class="value">@semester.StartDate</span>
                    </div>

                    @foreach (var academicSummary in semester.AcademicSummaries)
                    {
                        <div class="data-row">
                            <span class="label">@Model.Labels.AcademicCreditsInGPA</span>
                            <span class="value">@academicSummary.AcademicCreditsGpa</span>
                        </div>
                        <div class="data-row">
                            <span class="label">@Model.Labels.AcademicGPA</span>
                            <span class="value">@academicSummary.AcademicGpa</span>
                        </div>
                        <div class="data-row">
                            <span class="label">@Model.Labels.RangeMinimumforGPA</span>
                            <span class="value">@academicSummary.RangeMinGpa</span>
                        </div>
                        <div class="data-row">
                            <span class="label">@Model.Labels.RangeMaximumforGPA</span>
                            <span class="value">@academicSummary.RangeMaxGpa</span>
                        </div>
                    }
                </div>

                @if (semester.Courses.Count > 0)
                {
                    <table>
                        <tr>
                            <th>@Model.Labels.CourseNumber</th>
                            <th>@Model.Labels.CourseTitle</th>
                            <th>@Model.Labels.BasisforCredit</th>
                            <th>@Model.Labels.CreditValue</th>
                            <th>@Model.Labels.CreditValueEarned</th>
                            <th>@Model.Labels.CourseGradeMark</th>
                            <th>@Model.Labels.CourseGradeQualifier</th>
                            <th>@Model.Labels.CourseGradePoint</th>
                            <th>@Model.Labels.GradePointQualifier</th>
                        </tr>
                        <tbody>
                            @foreach (var course in semester.Courses)
                            {
                                <tr>
                                    <td>@course.CourseNumber</td>
                                    <td>@course.CourseTitle</td>
                                    <td>@course.BasisForCredit</td>
                                    <td>@course.CreditValue</td>
                                    <td>@course.CreditValueEarned</td>
                                    <td>@course.CourseGradeMark</td>
                                    <td>@course.CourseGradeQualifier</td>
                                    <td>@course.CourseGradePoint</td>
                                    <td>@course.GradePointQualifier</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        }
    }
</body>
</html>